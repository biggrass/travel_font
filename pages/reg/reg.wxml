
<form bindsubmit="formSubmit">

  <view class="cu-form-group">
    <view class='title'>学号</view>
    <input placeholder="请输入9位学号" class='radius' name='stuNum'></input>
  </view>

  <view class="cu-form-group">
    <view class='title'>手机号码</view>
    <input placeholder="请输入11位手机号" class='radius' name='phoneNum'></input>
    <view class="cu-capsule radius">
      <view class='cu-tag bg-blue '>
        +86
      </view>
      <view class="cu-tag line-blue">
        中国大陆
      </view>
    </view>
  </view>
  <view class="cu-form-group">
    <view class='title'>输入密码</view>
    <input password='True' placeholder="" class='radius' name='password1'></input>
  </view>
  <view class="cu-form-group">
    <view class='title'>确认密码</view>
    <input password='True' placeholder="" class='radius' name='password2'></input>
  </view>
  <view class="cu-form-group">
    <view class='title'>验证码</view>
    <input placeholder="输入短信内验证码" class='radius' name='input'></input>
    <button class='cu-btn bg-green shadow'>验证码</button>
  </view>
<view class="padding flex flex-direction">
  <button form-type='submit' class='cu-btn bg-red margin-tb-sm lg'>提交</button>
</view>

